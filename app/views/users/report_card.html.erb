<div class='row'>
  <div class="col-md-2">
    <div class="mg-r">
      <img src=<%= @twitter_profile_image %> class='debug img-thumbnail' height="200" width="200">
      <ul class='d-i debug'>
        <li class='fs-xl mg-t p-l'><%= @twitter_profile_name %></li>
        <li class='fs-m p-l'><%= @twitter_handle %></li>
      </ul>
    </div>
  </div>
  <div class="col-md-10 debug">
    <div class='h-m'></div>
    <ul class='p-s mg-b'>
      <li class="d-i debug p-r">
        <a href="#">
          <span class='fs-s'>WATCHINGS<span class='d-b txt-c fs-l'>20</span></span>
        </a>
      </li>
      <li class="d-i debug p-r">
        <a href="#">
          <span class='fs-s'>WATCHED<span class='d-b txt-c fs-l'>100</span></span>
        </a>
      </li>
      <li class="d-i debug p-r">
        <a href="#">
          <span class='fs-s'>ENDORSED<span class='d-b txt-c fs-l'>32</span></span>
        </a>
      </li>
    </ul>
    <div class="p-s rcorners bg-w mg-t mg-r">
      <p class="txt-c fs-l c-g">Compatibility Report</p>
      <p class='fs-xm txt-c'>Which candidates share my values?</p>
      <h4 class='m-a w-m p-t'>National Election 2016:</h4>




      <table class='table table-hover m-a w-m'>
          <% @report_card.offices.each do |office| %>
              <thead>
                  <tr>
                      <th colspan="2" class='txt-c p-t'><%= office[:name] %></th>
                  </tr>
              </thead>
                <% if office[:candidates] %>
                  <% office[:candidates].each do |candidate| %>
                      <tr>
                          <td><%= candidate[:name] %></td>
                          <td>
                              <details>
                                  <summary><%= candidate[:endorser_count] %></summary>
                                  <ul>
                                      <% candidate[:endorsers].each do |endorser| %>
                                      <li><%= endorser.name %></li>
                                      <% end %>
                                  </ul>
                              </details>
                          </td>
                      </tr>
                      <% end %>
                    <% else %>
                    <tr>
                        <td>No Candidates Endorsed!</td>
                        <td>
                        </td>
                    </tr>
                      <tr></tr>
                    <% end %>
          <% end %>
      </table>
    </div>
  </div>
</div>
