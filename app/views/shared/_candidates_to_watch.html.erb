<% @candidates.each_with_index do |candidate, index| %>
<div class='rcorners bg-w row'>
  <img src=<%= candidate.image %> alt="" class='mg p-s col-md-2 img-responsive'>
  <div class='col-md-9 mg p-s debug'>
    <table class='debug w txt-c'>
      <thead>
        <tr class='debug'>
          <th class='txt-c fs-m th-w'><a href="<%= show_path(candidate) %>">
          <%= candidate.name %></a></th>
          <th><%= candidate.description %></th>
        </th>
        <% if @logged_in %>
        <th><%= button_to "Endorse", endorse_path(candidate.user.id), :class => "btn-success btn-xs",:"aria-hidden"=> "true", :method => :post  %></th>
        <% else %>
        <!-- this below button logins in but does not redirect to the right page -->
        <th><%= button_to "Endorse", login_path, :class => "btn-success btn-xs",:"aria-hidden"=> "true", :method => :post, :headers => { :organization => candidate.user }  %></th>
        <% end %>
      </thead>
      <tr>
    </table>
  </div>
</div>
<% end %>
